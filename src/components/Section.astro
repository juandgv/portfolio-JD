---
const { title } = Astro.props;
---

<section>
    {title && <h2>{title}</h2>}
    <slot />
</section>
<style>
    section {
        max-width: 700px;
        margin: 0 auto 48px;
    }
    h2 {
        font-weight: 700;
        margin-bottom: 24px;
        line-height: 1.2;
        font-size: 1.5rem;
    }
</style>
