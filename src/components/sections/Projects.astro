---
import Section from "@/components/Section.astro";

import { projects } from "@cv";
---

<Section title="Projects">
    <ul>
        {
            projects.map(({ url, description, highlights, name, isActive }) => (
                <li>
                    <a
                        href={url}
                        title={`Check out ${name}`}
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <article>
                            <header>
                                <div class="title">
                                    <h3>{name}</h3>
                                    {isActive && (
                                        <span class="active-dot">â€¢</span>
                                    )}
                                </div>
                            </header>
                            <p>{description}</p>
                            {highlights && highlights.length > 0 && (
                                <ul class="highlights">
                                    {highlights.map((highlight) => (
                                        <li>{highlight}</li>
                                    ))}
                                </ul>
                            )}
                        </article>
                    </a>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        padding: 0;
        margin: 0;
    }

    li {
        list-style: none;
        page-break-inside: avoid;
        break-inside: avoid;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    article {
        background-color: #fff;
        border-radius: 8px;
        padding: 1rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        transition: all 0.3s ease;
    }

    article:hover {
        background-color: #f9fafb;
    }

    article:hover h3 {
        color: #ff3e8e;
    }

    header {
        margin-bottom: 0.5rem;
    }

    .title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .active-dot {
        color: #3fb950;
        font-size: 1.5rem;
        line-height: 1;
    }

    h3 {
        font-size: 1.125rem;
        font-weight: 600;
        color: #111;
        margin: 0;
        transition: color 0.3s ease;
    }

    p {
        color: #666;
        font-size: 0.875rem;
        line-height: 1.6;
        margin: 0;
        flex-grow: 1;
    }

    .highlights {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .highlights li {
        background-color: #f3f4f6;
        color: #666;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        ul {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        article {
            padding: 1rem;
        }
    }

    @media print {
        ul {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }

        article {
            border: 1px solid #ddd;
        }

        article:hover {
            background-color: #fff;
        }

        .highlights li {
            border: 1px solid #ddd;
            background-color: #fff;
        }

        a[href]:after {
            content: none !important;
        }
    }
</style>
